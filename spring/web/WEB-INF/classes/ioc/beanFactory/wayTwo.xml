<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="dge1992.spring.bean.Person">
        <constructor-arg index="0">
            <ref bean="car"/>
        </constructor-arg>
        <constructor-arg index="1">
            <ref bean="dog"/>
        </constructor-arg>
    </bean>

    <bean id="car" class="dge1992.spring.bean.Car">
        <property name="name" value="甲壳虫"/>
        <property name="year" value="1992"/>
        <property name="brand" value="大众"/>
    </bean>

    <bean id="dog" class="dge1992.spring.bean.Dog">
        <property name="name" value="ben"/>
        <property name="brand" value="金毛"/>
    </bean>

</beans>